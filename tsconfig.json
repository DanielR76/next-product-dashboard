{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "src",
    "paths": {
      "@styles": ["styles"],
      "@common": ["components/common"],
      "@loginComponents": ["components/login"],
      "@dashboardComponents": ["components/dashboard"],
      "@productsComponents": ["components/products"],
      "@hooks": ["hooks"],
      "@models": ["models"],
      "@providers": ["providers"],
      "@services": ["services"],
      "@types": ["types"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
